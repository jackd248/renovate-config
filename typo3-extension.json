{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"composerIgnorePlatformReqs": [
		"ext-intl",
		"ext-sodium",
		"php"
	],
	"packageRules": [
		{
			"description": "Widen all production dependencies",
			"matchDepTypes": [
				"require"
			],
			"rangeStrategy": "widen"
		},
		{
			"groupName": "TYPO3 CMS",
			"groupSlug": "typo3",
			"matchDatasources": [
				"packagist"
			],
			"matchPackageNames": [
				"typo3/cms-**",
				"!typo3/cms-cli",
				"!typo3/cms-composer-installers"
			]
		},
		{
			"description": "Disable Renovate for all fixture extensions used in functional tests",
			"extends": [
				":disableRenovate"
			],
			"matchFileNames": [
				"Tests/Functional/Fixtures/Extensions/**"
			]
		},
		{
			"description": "Force update of the composer.lock file for libraries/extensions",
			"matchManagers": [
				"composer"
			],
			"rangeStrategy": "bump"
		}
	],
	"constraints": {
		"php": "^8.2"
	}
}
